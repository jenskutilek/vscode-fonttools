{
    "name": "fonttools",
    "displayName": "FontTools",
    "description": "Support for font development tools",
    "publisher": "jenskutilek",
    "version": "0.1.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/jenskutilek/vscode-fonttools"
    },
    "bugs": {
        "url": "https://github.com/jenskutilek/vscode-fonttools/issues"
    },
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ttx",
        "onLanguage:vttasm"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "ttx",
                "aliases": [
                    "TTX",
                    "ttx"
                ],
                "extensions": [
                    ".ttx"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ttxasm",
                "aliases": [
                    "TTX Assembly",
                    "ttxasm"
                ],
                "extensions": [
                    ".ttxasm"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "vttasm",
                "aliases": [
                    "VTT Assembly",
                    "vttasm"
                ],
                "extensions": [
                    ".vttasm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ttx",
                "scopeName": "text.xml.ttx",
                "path": "./syntaxes/ttx.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.assembly": "source.assembly"
                }
            },
            {
                "language": "ttxasm",
                "scopeName": "source.assembly",
                "path": "./syntaxes/ttxasm.tmLanguage.json"
            },
            {
                "language": "vttasm",
                "scopeName": "source.assembly.vtt",
                "path": "./syntaxes/vttasm.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint ./client/src ./server/src src --ext ts",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.58.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
