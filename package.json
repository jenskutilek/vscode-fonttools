{
    "name": "fonttools",
    "displayName": "FontTools",
    "description": "Support for font development tools",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ttx"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "ttx",
                "aliases": [
                    "TTX",
                    "ttx"
                ],
                "extensions": [
                    ".ttx"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ttxasm",
                "aliases": [
                    "TTX Assembly",
                    "ttxasm"
                ],
                "extensions": [
                    ".ttxasm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ttx",
                "scopeName": "text.xml.ttx",
                "path": "./syntaxes/ttx.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.assembly": "source.assembly"
                }
            },
            {
                "language": "ttxasm",
                "scopeName": "source.assembly",
                "path": "./syntaxes/ttxasm.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
      },
      "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.58.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
      }
}
