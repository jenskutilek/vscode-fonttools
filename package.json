{
    "name": "fonttools",
    "displayName": "FontTools",
    "description": "Support for font development tools",
    "author": "Jens Kutilek",
    "publisher": "jenskutilek",
    "version": "0.2.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/jenskutilek/vscode-fonttools"
    },
    "bugs": {
        "url": "https://github.com/jenskutilek/vscode-fonttools/issues"
    },
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ttx",
        "onLanguage:vttasm"
    ],
    "main": "./out/main",
    "contributes": {
        "languages": [
            {
                "id": "ttx",
                "aliases": [
                    "TTX",
                    "ttx"
                ],
                "extensions": [
                    ".ttx"
                ],
                "configuration": "./client/language-configuration.json"
            },
            {
                "id": "ttxasm",
                "aliases": [
                    "TTX Assembly",
                    "ttxasm"
                ],
                "extensions": [
                    ".ttxasm"
                ],
                "configuration": "./client/language-configuration.json"
            },
            {
                "id": "vttasm",
                "aliases": [
                    "VTT Assembly",
                    "vttasm"
                ],
                "extensions": [
                    ".vttasm"
                ],
                "configuration": "./client/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ttx",
                "scopeName": "text.xml.ttx",
                "path": "./client/syntaxes/ttx.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.assembly": "source.assembly"
                }
            },
            {
                "language": "ttxasm",
                "scopeName": "source.assembly",
                "path": "./client/syntaxes/ttxasm.tmLanguage.json"
            },
            {
                "language": "vttasm",
                "scopeName": "source.assembly.vtt",
                "path": "./client/syntaxes/vttasm.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run -S esbuild-base -- --minify",
        "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run -S esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -b",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.58.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "esbuild": "^0.12.28",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.5"
    }
}
